<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.darcy.lib_access_skip.ui.TestSkipActivity">

    <ImageView
        android:id="@+id/ivTop"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lib_access_skip_dog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lib_access_skip_gray"
        android:padding="15dp"
        android:text="跳过"
        app:layout_constraintEnd_toEndOf="@id/ivTop"
        app:layout_constraintStart_toStartOf="@id/ivTop"
        app:layout_constraintTop_toBottomOf="@+id/ivTop" />

    <Button
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="跳过"
        app:layout_constraintEnd_toEndOf="@id/ivTop"
        app:layout_constraintStart_toStartOf="@id/ivTop"
        app:layout_constraintTop_toBottomOf="@+id/tvSkip" />

</androidx.constraintlayout.widget.ConstraintLayout>